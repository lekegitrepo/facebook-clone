<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
  <div class="card card-signin my-5">
    <div class="card-body">
      <h5 class="card-title text-center">Sign In</h5>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name),
         html: {class: "form-signin"}) do |f| %>
          <div class="form-label-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "form-control", placeholder:"Enter your email address" %>
          </div>

          <div class="form-label-group">
            <%= f.password_field :password, autocomplete: "current-password",
            class: "form-control", placeholder:"Enter your password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="custom-control custom-checkbox mb-3">
              <%= f.check_box :remember_me, class: "custom-control-input", id:"customCheck1" %>
              <%= f.label :remember_me, class: "custom-control-label" %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "sign in", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
          </div>
        <% end %>

        <hr class="my-4">

        <div>
          <%= link_to "Sign up", signup_path,
          class: "btn btn-lg btn-block btn-signup text-uppercase" %>
        </div>

        <i class="fab fa-facebook-f mr-2"></i>        
        <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path,
        class: "btn btn-lg btn-fb btn-block text-uppercase" %>

    </div>
  </div>
</div>
