<header class="bg-info navbar navbar-fixed-top navbar-inverse">
  <div class="container">
      <%= link_to 'facebook', root_path, class: 'navbar-brand' %>
    <nav>
      <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
           <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.username %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", user_profile_path %></li>
                <li><%= link_to "Settings",  edit_user_registration_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </li>
        </ul>
      <% else %>
        <span><%= link_to 'Login', login_path %>  </span>
        <span> <%= link_to 'Sign up', signup_path %> </span>
      <% end %>
    </nav><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</header>
